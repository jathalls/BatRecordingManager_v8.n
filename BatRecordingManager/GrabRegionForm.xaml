<Window x:Class="BatRecordingManager.GrabRegionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatRecordingManager"
        mc:Ignorable="d"
        Title="GrabRegionForm"
        Height="450"
        Width="800"
        BorderThickness="3"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        ToolTip="Drag and Resize to position, Right Click to select"
        Opacity="0.4"
        PreviewMouseDown="Window_MouseDown" BorderBrush="Black" ResizeMode="CanResizeWithGrip"
        PreviewMouseUp="Window_PreviewMouseUp">
    <Grid />
</Window>